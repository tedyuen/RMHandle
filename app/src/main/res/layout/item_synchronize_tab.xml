<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="@dimen/padding_lr"
    android:paddingRight="@dimen/padding_lr"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_community_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:text="小区名"
        android:textSize="16sp"
        android:textColor="@color/username_color"/>

    <TextView
        android:id="@+id/tv_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="6dp"
        android:text="客户"
        android:textSize="13sp"
        android:textColor="@color/text_grey"/>

    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_point_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05-15 13:23"
            android:textColor="@color/text_grey"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_point_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未上传点位：1"
            android:textColor="@color/username_color"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_photo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05-15 13:23"
            android:textColor="@color/text_grey"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_photo_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未上传图片：1"
            android:textColor="@color/username_color"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>