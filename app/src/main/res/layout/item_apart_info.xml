<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/shape_divider_line"
    android:showDividers="middle"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/panel_height_2"
        android:paddingLeft="@dimen/padding_lr"
        android:paddingRight="@dimen/padding_lr">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="房多多"
            android:textColor="@color/kan_color_2"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="59个楼盘，998个点位"
            android:textColor="@color/username_color"
            android:textSize="14sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_info_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/line_item_apart_info_frame"/>
        <include layout="@layout/line_item_apart_info_frame"/>

    </LinearLayout>



    <View android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/line_color_grey"/>
</LinearLayout>