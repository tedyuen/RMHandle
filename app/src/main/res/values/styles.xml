<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:title">@null</item>
    </style>

    <style name="HomeToolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="MatchActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background</item>
    </style>

    <!-- 底部bottombar中的字体设置 -->
    <style name="BottomBarTextStyle">
        <item name="android:textSize">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--设置里注销按钮-->
    <style name="LogoutButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/logout_btn_selector</item>
    </style>

    <!-- 首页单选 -->
    <style name="IndexRadioButtonStyle">
        <item name="android:textColor">@drawable/color_index_radio_btn</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/index_radio_btn_selector</item>
    </style>



    <!-- 绿色按钮 -->
    <style name="GreenButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/green_btn_selector</item>
    </style>

    <style name="GreyButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_grey_btn</item>
    </style>



    <!-- 红色按钮 -->
    <style name="RedButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/red_btn_selector</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColorHint">@color/bottom_grey</item>
    </style>

    <style name="EditTextStyle2">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/shape_index_radio_btn_uncheck</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColorHint">@color/bottom_grey</item>
    </style>

    <!--登录按钮-->
    <style name="LoginButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">7dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/log_btn_selector</item>
    </style>


    <style name="NoAnimation" parent="AppTheme.Toolbar">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>

    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
